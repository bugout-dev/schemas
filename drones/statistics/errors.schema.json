{
    "$id": "https://example.com/arrays.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Journal errors statistics",
    "type": "object",
    "definitions": {
        "count_by_time_point": {
            "type": "object",
            "description": "Count by time interval",
            "properties": {
                "date":{
                    "description": "Date",
                    "type": "string"
                },
                "count": {
                    "description": "Count in that date",
                    "type": "integer",
                    "exclusiveMinimum": 0
                },
                "hour": {
                    "description": "hour",
                    "type": "string",
                    "optional": true

                }
                
                
            }
        },
        "common_tags_count": {
            "type": "object",
            "description": "Most common tags",
            "additionalProperties": {
                    "description": "Count of tag",
                    "type": "integer",
                    "exclusiveMinimum": 0
            }    
        }
        
    },
    "properties": {
        "created_at": {
            "type": "string",
            "description": "Errors statistics created at"
        },
        "schema": {
            "type": "string",
            "description": "link to that schema"
        },
        "data": {
            "type": "object",
            "description": "statistics of journal entry tags",
            "properties": {
                "most_common_errors": {
                    "description": "Object which containe predefined time intervals with their most common tags",
                    "type": "object",
                    "properties": {
                        "year": {
                            "type": "array",
                            "items": {"$ref": "#/definitions/common_tags_count"}
                        },
                        "month": {
                            "type": "array",
                            "items": {"$ref": "#/definitions/common_tags_count"}
                        },
                        "week": {
                            "type": "array",
                            "items": {"$ref": "#/definitions/common_tags_count"}
                        },
                        "day": {
                            "type": "array",
                            "items": {"$ref": "#/definitions/common_tags_count"}
                        }
                    }
                },
                "errors_time_series": {
                    "description": "Timerange by tag name",
                    "type": "object",
                    "properties": {
                        "year": {
                            "description": "Tag with there timeseries",
                            "type": "object",
                            "additionalProperties": {
                                "description": "Counts by given time interval with time points",
                                "type": "array",
                                "optional": true,
                                "items": {"$ref": "#/definitions/count_by_time_point"}
                            }
                        },
                        "month": {
                            "description": "Tag with there timeseries",
                            "type": "object",
                            "additionalProperties": {
                                "description": "Counts by given time interval with time points",
                                "type": "array",
                                "optional": true,
                                "items": {"$ref": "#/definitions/count_by_time_point"}
                            }
                        },
                        "day": {
                            "description": "Tag with there timeseries",
                            "type": "object",
                            "additionalProperties": {
                                "description": "Counts by given time interval with time points",
                                "type": "array",
                                "optional": true,
                                "items": {"$ref": "#/definitions/count_by_time_point"}
                            }
                        }

                    }
                }
            }
        }
    }
}